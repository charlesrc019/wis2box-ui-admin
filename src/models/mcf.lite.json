{
    "type": "object",
    "properties": {
        "wis2box": {
            "type": "object",
            "title": "WIS 2.0",
            "description": "WIS 2.0 Identification Information",
            "properties": {
                "topic_hierarchy": {
                    "type": "string",
                    "pattern": "^[a-z]{3}\\.[_a-z]+\\.(data|metadata|reports)\\.(core|reccomended)\\.[\\w]+\\.[\\w-]+\\.[\\w]+$",
                    "description": "Unique identifier for this metadata file.",
                    "x-options":{
                        "messages":  {
                            "pattern":  "Invalid topic hierarchy."
                        }
                    }
                },
                "country": {
                    "type": "string",
                    "description": "Lower case representation of ISO3166 3-letter code. Includes extensions for partner organizations.",
                    "pattern": "^[a-z]{3}$",
                    "x-cols": 2,
                    "x-directives": [
                        {
                            "name": "mask",
                            "value": "AAA"
                        }
                    ],
                    "x-options":{
                        "messages":  {
                            "pattern":  "Invalid 3-letter code."
                        }
                    }
                },
                "center_id": {
                    "type": "string",
                    "x-cols": 4,
                    "description": "Agency acronym, as specified by member."
                },
                "data_category": {
                    "type": "string",
                    "x-cols": 4,
                    "description": "Earth system discipline subcategory."
                },
                "retention": {
                    "type": "string",
                    "pattern": "^[A-Z]\\d*[A-Z]$",
                    "x-cols": 2,
                    "description": "data retention",
                    "x-options":{
                        "messages":  {
                            "pattern":  "Invalid retention option."
                        }
                    }
                }
            },
            "required": [
                "retention",
                "topic_hierarchy",
                "data_category",
                "country",
                "center_id"
            ]
        },
        "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata Information",
            "properties": {
                "identifier": {
                    "type": "string",
                    "description": "Unique identifier for this file. (Usually similar to the topic hierarchy.)",
                    "pattern": "^urn:x-wmo:md:[a-z]{3}:[a-z0-9_-]+:[a-z0-9_-]+$",
                    "const": "urn:x-wmo:md:"
                },
                "language": {
                    "type": "string",
                    "description": "Abbreviation for primary language used in metadata.",
                    "pattern": "^[a-z]{2}$",
                    "x-cols": 6,
                    "x-directives": [
                        {
                            "name": "mask",
                            "value": "AA"
                        }
                    ],
                    "x-options":{
                        "messages":  {
                            "pattern":  "Invalid two-letter language abbreviation."
                        }
                    }
                },
                "language_alternate": {
                    "type": "string",
                    "description": "Abbreviation for alternative language used in metadata.",
                    "pattern": "^[a-z]{2}$",
                    "x-cols": 6,
                    "x-directives": [
                        {
                            "name": "mask",
                            "value": "AA"
                        }
                    ],
                    "x-options":{
                        "messages":  {
                            "pattern":  "Invalid two-letter language abbreviation."
                        }
                    }
                },
                "charset": {
                    "type": "string",
                    "description": "Character coding standard used for the metadata set.",
                    "x-cols": 3,
                    "enum": [
                        "utf-8",
                        "utf-16",
                        "ascii"
                    ]
                },
                "hierarchylevel": {
                    "type": "string",
                    "description": "Level to which the metadata applies.",
                    "x-cols": 3,
                    "enum": [
                        "series",
                        "software",
                        "featureType",
                        "model",
                        "collectionHardware",
                        "collectionSession",
                        "nonGeographicDataset",
                        "propertyType",
                        "fieldSession",
                        "dataset",
                        "service",
                        "attribute",
                        "attributeType",
                        "tile",
                        "feature",
                        "dimensionGroup"
                    ]
                },
                "parentidentifier": {
                    "type": "string",
                    "description": "Parent file identifier, if this metadata is a subset.",
                    "x-cols": 6
                }
            },
            "required": [
                "identifier",
                "language",
                "charset",
                "hierarchylevel"
            ]
        }
    }
}